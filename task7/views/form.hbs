<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="wrapper">
        <div class="form">
            <div class="form__status">{{status}}</div>
            <form action="{{action}}" method="post">
                <input type="hidden" name="id" value="{{data._id}}">
                <div class="form__field">
                    <input name="title" type="text" placeholder="Введите название" value="{{data.title}}">
                </div>
                <div class="form__field">
                    <input name="date" type="text" placeholder="Введите дату" value="{{data.date}}">
                </div>
                <div class="form__field">
                    <textarea name="text" cols="40" rows="10" placeholder="Введите текст">{{data.text}}</textarea>
                </div>
                <div class="form__btn">
                    <input type="submit" value="Сохранить" />
                    <button onclick="history.back()">Назад</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>